###############################################################################
# Configuración de Git                                                        #
###############################################################################

# -----------------------------------------------------------------------------
# Commits                                                                     #
# -----------------------------------------------------------------------------
[commit]
    gpgsign = true             # Habilitar firma GPG por defecto en los commits

# -----------------------------------------------------------------------------
# Credenciales                                                                #
# -----------------------------------------------------------------------------
[credential]
    helper = store              # Almacenar credenciales de forma segura
    # helper = cache --timeout=604800   # Alternativa: cache con tiempo de espera

###############################################################################
# Configuración de GHQ                                                       #
###############################################################################

# -----------------------------------------------------------------------------
# Directorio raíz                                                              #
# -----------------------------------------------------------------------------
[ghq]
    # root = "~/.local/rf"         # Directorio raíz principal para GHQ
    root = "~/Dropbox/DevWorkspace"            # Directorio raíz alternativo (comentado)

# -----------------------------------------------------------------------------
# Repositorio específico (DotFiles)                                            #
# -----------------------------------------------------------------------------
[ghq "https://git.jetbrains.space/silverblue/hist/DotFiles.git"]
    vcs = git                            # Sistema de control de versiones (Git)
    root = "$HOME/Developments"          # Directorio raíz específico para este repositorio
