# -- PATH ----------------------------------------------------------------------


# Combierte caps en ctrl
setxkbmap -option caps:ctrl_modifier

# Cargar configuración de Xresources
if [ -f ~/.Xresources ]; then
    xrdb -merge ~/.Xresources
fi


# thePrimeagen exports
export PATH="$HOME/.zig:$PATH"
export PATH="$HOME/.local/.npm-global/bin:$PATH"
export PATH="$HOME/.local/Primeagenscripts/:$PATH"
export PATH="$HOME/.local/go/bin:$PATH"
export PATH="$HOME/go/bin:$PATH"
export PATH="$HOME/personal/bin:$PATH"
export PATH="$HOME/.deno/bin:$PATH"

source  ~/.local/share/fzf/key-bindings.zsh
bindkey -s ^t "fzf-file-widget"
# Ctrl-T: fzf-file-widget
# Descripción: Abre una interfaz de fzf para buscar y seleccionar archivos y directorios.
# Los paths seleccionados se pegan en la línea de comandos.

bindkey -s ^i "fzf-cd-widget\n"
# ctrl-u: fzf-cd-widget
# Descripción: Abre una interfaz de fzf para buscar y seleccionar directorios.
# El shell cambia al directorio seleccionado.

bindkey -s ^r "fzf-history-widget"
# Ctrl-R: fzf-history-widget
# Descripción: Abre una interfaz de fzf para buscar y seleccionar comandos desde el historial de comandos. El comando seleccionado se pega en la línea de comandos.

source /usr/share/doc/fzf/examples/completion.zsh

export VIM="nvim"
export DOTFILES=$HOME/.dotfiles
export GIT_EDITOR=$VIM
export XDG_CONFIG_HOME=$HOME/.config


PERSONAL=$XDG_CONFIG_HOME/personal
source $PERSONAL/env
for i in `find -L $PERSONAL`; do
    source $i
done



export PATH="$HOME/bin:/usr/local/bin:$HOME/.local/bin:$HOME/.bin:$PATH"
export PATH="$HOME/Dropbox/Developer/bin:$PATH"
export PATH="$HOME/Dropbox/Developer/bin_test:$PATH"
export PATH="$HOME/Dropbox/Developer/bin_no_mios:$PATH"
export PATH="${XDG_DATA_HOME:-$HOME/.local/share}/cargo/bin:$PATH"
export PATH="$PATH:$FORGIT_INSTALL_DIR/bin"
DEVCONTAINERPATH="${HOME}/.config/Code - Insiders/User/globalStorage/ms-vscode-remote.remote-containers/cli-bin"
export PATH="$DEVCONTAINERPATH:$PATH"
export FBOOKMARK_LOCATION="${XDG_CONFIG_HOME:-$HOME/.config}/fbookmark"
#export DOCKER_HOST=unix:///run/user/1000/docker.sock
export DOCKER_HOST=unix:///var/run/docker.sock
export PATH="$HOME/.local/share/nvim/mason/bin:$PATH"
export NOTES_DIR=$HOME/Dropbox/notes
export PATH=$PATH:$HOME/.spicetify
export PATH="/opt/brew/bin:$PATH"
. "$HOME/.cargo/env"

# -- SYSTEM ENV ----------------------------------------------------------------

export LANG=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export EDITOR=micro
export TERM="xterm-256color"
export COLORTERM="truecolor"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export CARGO_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/cargo"
export RUSTUP_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/rustup"
export LS_COLORS="$(vivid generate molokai)"
export XCURSOR_PATH=${XCURSOR_PATH}:~/.local/share/icons
export NVM_DIR="$HOME/.nvm"
# Luarocks bin path
[ -d ${HOME}/.luarocks/bin ] && {
  export PATH="${HOME}/.luarocks/bin${PATH:+:${PATH}}"
}

# -- LAZYMAN -------------------------------------------------------------------

[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"                   # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" # This loads nvm bash_completion
# Source the Lazyman shell initialization for aliases and nvims selector
# shellcheck source=.config/nvim-Lazyman/.lazymanrc
[ -f ~/.config/nvim-Lazyman/.lazymanrc ] && source ~/.config/nvim-Lazyman/.lazymanrc
# Source the Lazyman .nvimsbind for nvims key binding
# shellcheck source=.config/nvim-Lazyman/.nvimsbind
[ -f ~/.config/nvim-Lazyman/.nvimsbind ] && source ~/.config/nvim-Lazyman/.nvimsbind
