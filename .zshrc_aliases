# -- DOTBARE ALIASES ------------------------------------------------------------

dotbare_full_paths() {
  # Agregar un argumento opcional para filtrar por tipo de archivo
  # dotbare_full_paths: Muestra todos los archivos.
  # dotbare_full_paths py: Muestra solo los archivos con extensi√≥n .py.

  if [[ -n "$1" ]]; then
    dotbare ls-files --full-name --directory "${DOTBARE_TREE}" | grep "$1" | awk -v home="${DOTBARE_TREE}/" '{print home $0}'
  else
    dotbare ls-files --full-name --directory "${DOTBARE_TREE}" | awk -v home="${DOTBARE_TREE}/" '{print home $0}'
  fi
}
 


alias ds='dotbare s'       # git status
alias ddiff='dotbare fadd' # Comparar cambios y stash
#
alias daf="dotbare fadd -f" # agregar archivos
alias dad="dotbare fadd -d" # agregar directorios
#
alias dresset="dotbare freset" # quita archivos del stage (git add )
#
alias dcm="dotbare commit -m" # espera el mensaje para el commit
alias dsr="dotbare freset"    #unstage files after dotbare add
#
alias dp='dotbare push'
#
alias dcc='dotbare fcheckout'    #discard changes made
alias dcb='dotbare fcheckout -b' #escoge una rama para checkout
#
alias dhard='dotbare reset --hard master' # DANGER: descarta los cambios locales
#
alias dedit='dotbare fedit' # edita un archivo incluido en los repositorios
#
alias dlog='dotbare flog' # interactive log
# revert: revert the selected commit
# reset: reset HEAD to the selected commit --mixed
# edit: edit selected commit --rebase (reword commit)
# checkout: checkout the selected commit
#
alias dst='dotbare stash'      # crea un WIP stash
alias dsta='dotbare fstash'    # aplica un WIP stash
alias dstd='dotbare fstash -d' # elimina un o varios WIP stash
alias ddoc='docker container run -it --rm --name dotbare kazhala/dotbare:latexitest'
alias drob='docker container run -it --rm --name dotbare-rob  mi-imagen-arch'
